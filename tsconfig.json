{
    "compilerOptions": {
        "target": "ESNext", // 最新の構文を許容（型チェック用）
        "lib": [
            "esnext",
            "dom"
        ], // GAS 開発で必要なブラウザ（DOM）と最新の ECMAScript API
        "module": "ESNext", // 型チェックではESM、実際の変換はBabel/webpackに委譲
        "moduleResolution": "Bundler",
        "noEmit": true, // tscは型チェックのみ
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ],
        "types": [
            "google-apps-script"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}
